    <title>Update Book</title>
</head>

<body>
    <div class="p3 mt-5">
        <form action="/book/update/<%= id %>" method="post" class="form">
            <label for="First" class="form-label">
                Title:
            </label>
            <input type="text" name="title" class="form-control" placeholder="Enter Genre" value="<%= title %> "
                required />
            <label for="First" class="form-label">
                Author:
            </label>
            <select name="author" class="form-select" selected="<%= author %> ">
                <option value="<%= author %>" selected>
                    <%= author %>
                </option>
                <% for (var i=0;i<authors.length;i++) { %>
                    <option value="<%= authors[i].first_name %>">
                        <%= authors[i].first_name %>
                    </option>
                    <% } %>
                        <!-- add author button to do -->
            </select> Summary:
            </label>
            <input type="text" name="summary" class="form-control" placeholder="Enter Summary" value="<%= summary %> "
                required />
            ISBN:
            </label>
            <input type="text" name="isbn" class="form-control" placeholder="Enter ISBN Number" value="<%= isbn %> "
                required />
            Genre:
            </label>
            <select name="genre" class="form-select">
                <option value="<%= genre %>" selected>
                    <%= genre %>
                </option>
                <% for (var i=0;i<genres.length;i++) { %>
                    <option value=" <%=genres[i].name %>">
                        <%= genres[i].name %>
                    </option>
                    <% } %>
                        <!-- add author button to do -->
            </select> <br>
            <button type="submit" class="btn-primary-outlined">
                Update
            </button>
        </form>
    </div>
</body>

